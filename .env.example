# SMTP Configuration for Contact Form
# Add these variables to your .env.local file

# SMTP Server Settings
SMTP_HOST=your.smtp.server.com
SMTP_PORT=587                    # Common ports: 587 (TLS), 465 (SSL), 25 (unsecured)
SMTP_USER=your-email@domain.com
SMTP_PASS=your-smtp-password

# Email Settings
EMAIL_FROM="Leap North Contact Form <noreply@leapnorth.com>"
EMAIL_TO=hello@leapnorth.com     # Where contact form submissions will be sent

# Optional: TLS Certificate Validation
# Set to "false" for self-signed certificates (not recommended for production)
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Application Settings
PORT=3002
NODE_ENV=development
